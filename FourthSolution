ALGORITHM pb1_sol1
VAR
    Sentence1 : ARRAY_OF INTEGER[4];
    Sentence2 : ARRAY_OF INTEGER[5];
    i   : INTEGER;
    j   : INTEGER := 0;
    sum : INTEGER := 0;
    count: INTEGER := 0;
BEGIN
    htab : HASH_TABLE<INTEGER,INTEGER>;
    FOR i FROM 0 TO arr1.length-1 DO
        Read(Sentence1[i]);
        IF htab.lookup(Sentence1[i]); THEN
            count := htab.get(Sentence1[i])+1;
            htab.insert(Sentence1[i],count);
        ElSE
            htab.insert(Sentence1[i],1);
        END_IF
    END_FOR

    FOR i FROM 0 TO Sentence2.length-1 DO
        Read(Sentence2[i]);
        IF htab.lookup(Sentence2[i]); THEN
            count := htab.get(Sentence1[i])+1;
            htab.insert(Sentence2[i],count);
        ElSE
            htab.insert(Sentence2[i],1);
        END_IF
    END_FOR

    // sum all the elements with count = 1
    FOR i FROM 0 TO Sentence1.length-1 DO
        IF htab.get(Sentence1[i])>1 THEN
        sum := sum+1;
        END_IF
    END_FOR
    
    FOR i FROM 0 TO Sentence2.length-1 DO
        IF htab.get(Sentence2[i])>1 THEN
        sum := sum+1;
        END_IF
    END_FOR

    Write("The sum of all overlapping elements is : ",sum);
END